{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "jsx": "preserve",
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
